{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators":true,
        "sourceMap": true,
        "noImplicitThis": false,
        "baseUrl": "."
    },
    "include": ["resources/**/*.ts","resources/**/*.vue"],
    "exclude": [
        "./out.d.ts",
        "node_modules"
    ]
}
